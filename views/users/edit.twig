{% extends 'layout.twig' %}

{% block title %} | Редактирование пользователя{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Профиль пользователя</h2>
        <form accept-charset="UTF-8" action="?controller=user&action=update&entity={{ user.id }}" method="POST">
            {% if error|length %}
                <div class="alert alert-danger">
                    <ul>
                        <li>{{ error }}</li>
                    </ul>
                </div>
            {% endif %}
            <div class="form-group">
                <label for="name">Имя</label>
                <input type="text" id="name" name="name" value="{{ user.name }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="middleName">Отчество</label>
                <input type="text" id="middleName" name="middleName" value="{{ user.middleName }}" class="form-control">
            </div>
            <div class="form-group">
                <label for="secondName">Фамилия</label>
                <input type="text" id="secondName" name="secondName" value="{{ user.secondName }}" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-success">
                <a href="{{ homeUrl }}?controller=user" class="btn btn-default" id="new-task">Отменить</a>
            </div>
        </form>
    </div>
</div>
{% endblock %}